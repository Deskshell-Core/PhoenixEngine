CXXFLAGS += " -Ilibconfig/lib";
CFLAGS += " -Ilibconfig/lib";
target OUT+"/libconfig.a" {
	input [
		files("libconfig/lib/*.c"), 
		files("libconfig/lib/*.cc")
	];
	rule "lib";
	LBCFLAGS += " -DHAVE_CONFIG_H -DPARSER_PREFIX=\"libconfig_yy\" -D_REENTRANT";
	CFLAGS += LBCFLAGS;
	CXXFLAGS += LBCFLAGS;
}
